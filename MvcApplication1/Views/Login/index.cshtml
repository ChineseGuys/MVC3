<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <link href="/Content/jquery-easyui-1.5.5.2/themes/default/easyui.css" rel="stylesheet" />
    <link href="/Content/jquery-easyui-1.5.5.2/themes/icon.css" rel="stylesheet" />
    <link href="/Content/admin.css" rel="stylesheet" />
    <script src="/Content/jquery-easyui-1.5.5.2/jquery.min.js"></script>
    <script src="/Content/jquery-easyui-1.5.5.2/jquery.easyui.min.js"></script>
    <script src="/Content/common.js"></script>
</head>
<style>
    body{
  background:#fff url("../Images/background.jpg") no-repeat left top;
  background-size:100%;
}
    .panel {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%,-50%);
    }
</style>
<body >
    <div class="easyui-panel" title="Welcome" style="width:400px">
		<div style="padding:10px 60px 20px 60px">
	    <form id="ff" class="easyui-form" method="post" data-options="novalidate:true">
	    	<table cellpadding="5">
	    		<tr>
	    			<td>账号:</td>
	    			<td><input class="easyui-textbox" type="text" name="Account" data-options="required:true"></td>
	    		</tr>
	    		<tr>
	    			<td>密码:</td>
	    			<td><input class="easyui-textbox" type="text" name="Password" data-options="required:true"></td>
	    		</tr>
	    	</table>
	    </form>
	    <div style="text-align:center;padding:5px">
	    	<a href="javascript:void(0)" class="easyui-linkbutton" onclick="submitForm()">登录</a>
	    	<a href="javascript:void(0)" class="easyui-linkbutton" onclick="clearForm()">取消</a>
	    </div>
	    </div>
	</div>
</body>
</html>
<script>
    function saveUser() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                if (result.success) {
                    self.location = "home";
                } else {
                    $.messager.show({
                        title: 'Error',
                        msg: result.msg
                    });
                }
            }
        });
    }
	function submitForm(){
		$('#ff').form('submit', {
		    url: 'login/Login',
		    onSubmit: function () {
		        return $(this).form('validate');
		    },
		    success: function (result) {
		        var result = eval('(' + result + ')');
		        if (result.success) {
		            self.location = "Home";
		        } else {
		            $.messager.alert({
		                title: 'Error',
		                msg: "账号或密码错误"
		            });
		        }
		    }
		});
	}
	function clearForm(){
		$('#ff').form('clear');
	}
</script>